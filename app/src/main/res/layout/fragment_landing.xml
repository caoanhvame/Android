<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_landing_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/fragment_landing_item"
        android:layout_width="65dp"
        android:layout_height="105dp"
        android:layout_weight="1"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/icon_item"
        android:gravity="center"
        android:tag="@string/item"
        android:text="@string/item"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fragment_landing_hero"
        android:layout_width="65dp"
        android:layout_height="104dp"
        android:layout_weight="1"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/icon_hero"
        android:gravity="center"
        android:tag="@string/hero"
        android:text="@string/hero"
        android:textSize="20sp" />

</LinearLayout>